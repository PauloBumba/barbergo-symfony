<html class="h-100">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}BarberGO
			{% endblock %}
		</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="d-flex flex-column h-100">
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container">
					<a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
						<img src="{{ asset('images/favicon.ico') }}" alt="Logo BarberGO" width="40" height="40" class="me-2">
						<span class="fs-4 fw-bold">BarberGO</span>
					</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="main-nav">
						<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a href="{{ path('app_home')}}" class="nav-link px-3 {% if 'home' in app.request.attributes.get('_route') %}active border-bottom border-4 border-white{% endif %}">
									<i class="bi bi-house me-1"></i>
									<span class="d-lg-inline">Início</span>
								</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('app_registration') }}" class="nav-link px-3 {% if 'registration' in app.request.attributes.get('_route') %}active border-bottom border-4 border-white{% endif %}">
									<i class="bi bi-people me-1"></i>
									<span class="d-lg-inline">Cadastro</span>
								</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('app_login') }}" class="nav-link px-3 {% if 'login' in app.request.attributes.get('_route') %}active border-bottom border-4 border-white{% endif %}">
									<i class="bi bi-door-open me-1"></i>
									<span class="d-lg-inline">Login</span>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<main class="flex-grow-1"> {% block body %}{% endblock %}
			</main>

			<footer class="bg-dark text-white pt-4 mt-auto">
				<div class="container">
					<div class="row text-center text-md-start">
						<div class="col-md-4 mb-4 mb-md-3">
							<h5 class="fw-bold text-uppercase">BarberGO</h5>
							<p class="text-white-50 small">Transformando seu corte em experiência. Reserve, corte, aproveite.</p>
						</div>
						<div class="col-md-4 mb-4 mb-md-3">
							<h6 class="fw-semibold text-uppercase">Links Rápidos</h6>
							<ul class="list-unstyled">
								<li>
									<a href="{{ path('app_home') }}" class="text-white text-decoration-none">Início</a>
								</li>
								<li>
									<a href="{{ path('app_registration') }}" class="text-white text-decoration-none">Cadastro</a>
								</li>
								<li>
									<a href="{{ path('app_login') }}" class="text-white text-decoration-none">Login</a>
								</li>
							</ul>
						</div>
						<div class="col-md-4 mb-4 mb-md-3">
							<h6 class="fw-semibold text-uppercase">Contato</h6>
							<p class="mb-2">
								<i class="bi bi-envelope me-2"></i>contato@barbergo.com
							</p>
							<p class="mb-0">
								<i class="bi bi-phone me-2"></i>(11) 99999-9999
							</p>
						</div>
					</div>

					<hr class="my-3">

					<div class="d-flex justify-content-between align-items-center flex-column flex-md-row pb-3">
						<p class="mb-3 mb-md-0 small text-white-50">© 2025 BarberGO. Todos os direitos reservados.</p>
						<div>
							<a href="#" class="text-white me-3 text-decoration-none fs-4">
								<i class="bi bi-facebook"></i>
							</a>
							<a href="#" class="text-white text-decoration-none me-3 fs-4">
								<i class="bi bi-instagram"></i>
							</a>
							<a href="#" class="text-white text-decoration-none fs-4">
								<i class="bi bi-whatsapp"></i>
							</a>
						</div>
					</div>
				</div>
			</footer>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
		</body>
	</html>

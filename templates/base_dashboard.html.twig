<html class="h-100">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Admin: BarberGO
			{% endblock %}
		</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="d-flex flex-column h-100">

		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container">
					<a class="navbar-brand d-flex align-items-center" href="{{ path('app_dashboard') }}">
						<img src="{{ asset('images/favicon.ico') }}" alt="Logo BarberGO" width="40" height="40" class="me-2">
						<span class="fs-4 fw-bold">BarberGO: Admin</span>
					</a>

					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#admin-nav" aria-controls="admin-nav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="admin-nav">
						<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a href="{{ path('app_dashboard')}}" class="nav-link px-3 {% if 'dashboard' in app.request.attributes.get('_route') %} active border-bottom border-4 border-white{% endif %}">
									<i class="bi bi-bar-chart-line-fill me-1"></i>
									<span class="d-lg-inline">Dashboard</span>
								</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('app_users_index') }}" class="nav-link px-3 {% if 'user' in app.request.attributes.get('_route') %} active border-bottom border-4 border-white{% endif %}">
									<i class="bi bi-people-fill me-1"></i>
									<span class="d-lg-inline">Usuários</span>
								</a>
							</li>
							<li class="nav-item">
								<a href="/logout" class="nav-link px-3 text-danger fw-semibold">
									<i class="bi bi-box-arrow-left me-1"></i>
									<span class="d-lg-inline">Sair</span>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<main class="flex-grow-1"> {% block body %}{% endblock %}
			</main>

			<footer class="bg-dark text-white pt-4 mt-auto">
				<div class="container">
					<div class="d-flex justify-content-between align-items-center flex-column flex-md-row pb-3">
						<p class="mb-3 mb-md-0 small text-white-50">© 2025 BarberGO Admin Panel. Todos os direitos reservados.</p>
						<div>
							<a href="#" class="text-white me-3 text-decoration-none fs-4">
								<i class="bi bi-facebook"></i>
							</a>
							<a href="#" class="text-white text-decoration-none me-3 fs-4">
								<i class="bi bi-instagram"></i>
							</a>
							<a href="#" class="text-white text-decoration-none fs-4">
								<i class="bi bi-whatsapp"></i>
							</a>
						</div>
					</div>
				</div>
			</footer>

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
		</body>
	</html>
